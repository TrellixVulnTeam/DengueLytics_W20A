<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_gravity="center"
        android:layout_width="77dp"
        android:layout_height="70dp"
        android:background="@android:drawable/ic_menu_send"
        android:layout_marginBottom="10dp"/>

    <MultiAutoCompleteTextView
        android:id="@+id/texthere"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:lines="5"
        android:textAlignment="center"
        android:background="@drawable/edittextblack"
        android:textColor="@color/pDark"
        android:hint="Enter Message here"
        android:layout_margin="5dp"/>


    <Spinner
        android:id="@+id/addresshere"
        android:layout_margin="5dp"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:entries="@array/admin"
        android:textAlignment="center"
        android:background="@drawable/loginfieldblack"


        ></Spinner>

    <Button
        android:id="@+id/sendhere"
        android:layout_margin="5dp"
        android:layout_width="280dp"
        android:textColor="@color/white"
        android:text="SEND MESSAGE"
        android:layout_height="48dp"

        android:background="@drawable/submitbtn"/>


</LinearLayout>





</android.support.constraint.ConstraintLayout>