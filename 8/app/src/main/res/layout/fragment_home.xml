                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="@color/ltgray"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
