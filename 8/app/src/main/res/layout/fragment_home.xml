<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="xyz.aetherapps1.a8.HomeFragment">


        <android.support.constraint.ConstraintLayout

            android:id="@+id/loginalert"
            android:background="@color/prompts"


            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="70dp">


            <TextView
                android:id="@+id/loginprompt"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Log in to access great features!"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/white"/>

            <Button
                app:layout_constraintTop_toBottomOf="@id/loginprompt"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginBottom="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                app:layout_goneMarginBottom="7dp"



                android:layout_width="185dp"
                android:layout_height="28dp"
                android:text="Log in"

                android:background="@drawable/loginbutton"
                tools:layout_editor_absoluteX="0dp" />

            <Button
                android:layout_height="24dp"
                android:layout_width="24dp"
                android:layout_marginTop="-5dp"
                android:layout_marginEnd="-5dp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/ic_close_black_24dp"
                tools:layout_editor_absoluteY="25dp"
                tools:layout_editor_absoluteX="0dp" />


        </android.support.constraint.ConstraintLayout>

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"

            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <LinearLayout
